<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Conference_Infinity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed">true</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/white_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/white_gray</item>

    </style>

    <style name="backColor" parent="Widget.AppCompat.TextView">
        <item name="color">@color/black</item>
        <item name="android:fillColor">@color/black</item>
    </style>

    <style name="TextviewColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PageTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="radioTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

</resources>