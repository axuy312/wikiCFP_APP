<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activity_Setting_Language">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginHorizontal="24sp"
        android:layout_marginVertical="24sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <at.markushi.ui.CircleButton
            android:id="@+id/setting_language_back_btn"
            android:layout_width="64sp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            app:cb_color="@color/light_selected_gray"

            app:cb_pressedRingWidth="0sp" />

        <TextView
            style="@style/PageTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="@string/prefer_language"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="30sp"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20sp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="Please Select Your Language"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/light_gray" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setting_language_zh_tw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_zh_tw"
            android:drawablePadding="12sp"
            android:paddingStart="12sp"
            android:paddingTop="5sp"
            android:paddingEnd="12sp"
            android:paddingBottom="5sp"
            android:text="@string/traditional_chinese"
            android:textAllCaps="false"
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setting_language_en_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_en_us"
            android:drawablePadding="12sp"
            android:paddingStart="12sp"
            android:paddingTop="5sp"
            android:paddingEnd="12sp"
            android:paddingBottom="5sp"
            android:text="@string/english_us"
            android:textAllCaps="false"
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginVertical="20sp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="Settings will be save in Firebase"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/light_gray" />

    </LinearLayout>

</LinearLayout>