<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_item_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/teal_200"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/category_item_title"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="20sp"
            android:paddingEnd="0sp"
            android:singleLine="false"
            android:text="test"
            android:textSize="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/conference_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingVertical="5dp"
        android:singleLine="false"
        android:text="@string/topics"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/dark_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:text="@string/Paper_Deadline"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/conference_item_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingVertical="5dp"
            android:singleLine="false"
            android:text="2020/11/02"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@color/teal_200"
            android:scaleType="centerInside"
            android:src="@drawable/ic_comments" />

        <TextView
            android:id="@+id/comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:paddingStart="5sp"
            android:paddingEnd="0sp"
            android:text="1234"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bell"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/teal_200"
                android:contentDescription="@string/bookmarked"
                android:scaleType="centerInside"
                android:src="@drawable/ic_bookmark_off" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>