<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activity_Setting_Theme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginHorizontal="24sp"
        android:layout_marginVertical="24sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <at.markushi.ui.CircleButton
            android:id="@+id/setting_theme_back_btn"
            android:layout_width="64sp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            app:cb_color="@color/light_selected_gray"

            app:cb_pressedRingWidth="0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="@string/theme"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            style="@style/PageTitle" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="30sp"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20sp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="Please Select a Theme"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/light_gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Theme Demo"
            android:src="@drawable/ic_setting_theme_demo" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="20sp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/setting_theme_light_btn"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_left_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:onClick="onRadioButtonClick"
                android:text="@string/light" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/setting_theme_dark_btn"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_right_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:onClick="onRadioButtonClick"
                android:text="@string/dark" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20sp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="Settings will be save in Firebase"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/light_gray" />

    </LinearLayout>

</LinearLayout>