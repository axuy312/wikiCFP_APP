<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20sp"
    android:orientation="vertical"
    app:cardCornerRadius="10sp"
    app:cardElevation="3sp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_orange"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pending_conference_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginVertical="20sp"
                android:text="@string/conference_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/dark_gray" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/black"
            tools:ignore="SmallSp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pending_conference_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_conference_date"
            android:drawablePadding="24sp"
            android:paddingVertical="20sp"
            android:text="2020/11/02 PM 1:10 (GTC+8)"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" >
        </androidx.appcompat.widget.AppCompatButton>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pending_conference_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_conference_location"
            android:drawablePadding="24sp"
            android:paddingVertical="20sp"
            android:text="Yuan Ze Building 1 Room 1201A"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <LinearLayout
            android:id="@+id/prepare_things_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginHorizontal="24sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginVertical="5sp"
                android:layout_marginTop="10sp"
                android:text="@string/prepare_things" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginHorizontal="5sp"
                android:background="@color/black"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <EditText
            android:id="@+id/add_prepare_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_add"
            android:drawablePadding="24sp"
            android:hint="@string/add_things"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingTop="10sp"
            android:paddingBottom="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>

</androidx.cardview.widget.CardView>