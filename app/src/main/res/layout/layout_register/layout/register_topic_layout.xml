<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="20sp"
        android:layout_weight="2"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/topics_back_btn"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/ic_back"
            app:cb_color="@color/light_selected_gray"
            app:cb_pressedRingWidth="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:paddingStart="20sp"
            android:paddingEnd="0sp"
            android:text="@string/welcome_conference_infinity"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/light_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:paddingStart="20sp"
            android:paddingEnd="0sp"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="10"
            android:shadowRadius="6"
            android:text="@string/topics"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/dark_gray"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10sp"
            android:text="@string/select_following_topics"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/light_gray" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20sp">

            <com.google.android.material.chip.Chip
                android:id="@+id/ai_btn"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artificial Intelligence" />

            <com.google.android.material.chip.Chip
                android:id="@+id/big_data_btn"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Big Data" />

            <com.google.android.material.chip.Chip
                android:id="@+id/software_engineering_btn"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Engineering" />

            <com.google.android.material.chip.Chip
                android:id="@+id/cloud_computing_btn"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloud Computing" />

        </com.google.android.material.chip.ChipGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="40sp"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/topics_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/custom_register_btn"
            android:padding="10sp"
            android:text="@string/next" />

    </LinearLayout>

</LinearLayout>